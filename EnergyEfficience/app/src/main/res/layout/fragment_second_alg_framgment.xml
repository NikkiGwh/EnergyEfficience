<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondAlgFramgment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/pathFindingToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="showcase" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/PathFindingCanvas"
            android:layout_width="0dp"
            android:layout_height="500dp"
            android:layout_margin="5dp"
            android:background="@color/canvasBackground"
            app:layout_constraintBottom_toTopOf="@+id/FindPathbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pathFindingToolbar" />

        <Button
            android:id="@+id/GenerateMapbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="generate map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/PathFindingCanvas" />

        <Button
            android:id="@+id/FindPathbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="find path"
            app:layout_constraintBottom_toTopOf="@+id/GenerateMapbtn"
            app:layout_constraintEnd_toEndOf="@+id/PathFindingCanvas" />

        <TextView
            android:id="@+id/textViewObstacles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number of obstacles"
            android:background="@color/cardview_dark_background"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumOfObs"
            app:layout_constraintStart_toStartOf="@+id/PathFindingCanvas" />

        <EditText
            android:id="@+id/editTextNumOfObs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="integer"
            android:inputType="number"
            android:background="@color/cardview_dark_background"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewObstacles" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>